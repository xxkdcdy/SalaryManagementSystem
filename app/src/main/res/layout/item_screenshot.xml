<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="6dp"
        app:qmui_skin_background="?attr/qmui_skin_support_s_list_item_bg_1">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/qmui_skin_support_s_list_item_bg_1"
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/card"
            android:padding="2dp">

            <TextView
                android:id="@+id/screenshot_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal|top"
                android:textColor="?attr/qmui_config_color_gray_6"
                android:text="发薪日期 "
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/screenshot_department"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal|top"
                android:textColor="?attr/qmui_config_color_gray_6"
                android:text="发薪日期 "
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/screenshot_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal|top"
                android:textColor="?attr/qmui_config_color_gray_6"
                android:text="发薪日期 "
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/screenshot_p"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal|top"
                android:textColor="?attr/qmui_config_color_gray_6"
                android:text="发薪日期 "
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/screenshot_d"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal|top"
                android:textColor="?attr/qmui_config_color_gray_6"
                android:text="发薪日期 "
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/screenshot_s"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal|top"
                android:textColor="?attr/qmui_config_color_gray_6"
                android:text="发薪日期 "
                android:textSize="12sp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>